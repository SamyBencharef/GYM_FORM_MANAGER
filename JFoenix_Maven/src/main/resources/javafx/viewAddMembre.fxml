                     </HBox.margin>
                  </JFXCheckBox>
               </children>
            </HBox>
            <JFXDatePicker fx:id="dtnMembre" defaultColor="#9c0000" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Date de naissance">

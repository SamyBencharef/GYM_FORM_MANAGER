<AnchorPane fx:id="rootPane" prefHeight="715.0" prefWidth="390.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymformmanager.controller.controllerAddMembre">
